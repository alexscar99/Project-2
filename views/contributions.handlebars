        <li class="nav-item">
          <a class="nav-link" href="/all/contributions">User Resources</a>
        </li>
      </ul>
    </div>
  </div>
</nav>

<header class="masthead text-center text-white">
  <div class="masthead-content">
    <div class="container">
      <h5 class="masthead-heading mb-0 resourcesMast animated lightSpeedIn">Browse the resorces below or contribute to our user resources</h5>
      <br>
      <form class="create-form"></form>
      <div class="form-group">
        <a href="/contributions/post" class="express-btn btn btn-primary btn-xl rounded-pill mt-5" data-language="contribute post"
          id="contributeButton">Contribute a New Post</a>
        <br>
        <br>
      </div>
    </div>
  </div>

  <div class="bg-circle-1 bg-circle"></div>
  <div class="bg-circle-2 bg-circle"></div>
  <div class="bg-circle-3 bg-circle"></div>
  <div class="bg-circle-4 bg-circle"></div>
</header>
<br>
<section>
  <div class="infoSection">
    <img id="backgroundimage" src="/img/code1.jpg" border="0" alt="">
    <div class="container">
      <div class="row">
        <div class="col-sm-8"></div>

        <form id="post" class="col-sm-4">
          <div class="form-group">
            <h4 for="category">Select Language:</h4>
            <select class="custom-select" id="languages" name="language">
              <option value="" disabled selected>Select your option</option>
              <option value="html">HTML</option>
              <option value="css">CSS</option>
              <option value="javascript">JavaScript</option>
              <option value="mysql">MySQL</option>
              <option value="node">Node</option>
              <option value="express">Express</option>
              <option value="react">React</option>
              <option value="python">Python</option>
              <option value="java">Java</option>
              <option value="c#">C#</option>
              <option value="php">PHP</option>
              <option value="ruby">Ruby</option>
            </select>
          </div>
        </form>
      </div>
    </div>
    <div class="container" style="overflow: auto;height:1097px;">
      {{#each posts}}
      <div class="contributions">
        <br>
        <div class="row">
          <h3 class="text-left col-sm-9">{{this.title}}</h3>
          <h5 class="col-sm-3 text-right">{{this.language}}</h5>
        </div>
        <div class="truncate">
          <span class="text-left">{{this.content}}</span>
        </div>
        <p class="text-right">-Shared by {{this.User.user_name}}</p>
      </div>
      {{/each}}
    </div>
</section>
</div>
